page {
  width: 100%;
}
page view {
  box-sizing: border-box;
}
page .addressList {
  width: 100%;
}
page .addressList .addressItem {
  display: flex;
  flex-direction: column;
  padding: 10rpx;
  padding-bottom: 0;
  height: 115rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
page .addressList .addressItem .top {
  flex: 1;
  display: flex;
  padding-bottom: 10rpx;
}
page .addressList .addressItem .top .name {
  font-weight: 600;
  width: 140rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
page .addressList .addressItem .top .phone {
  font-weight: 600;
  padding-left: 10rpx;
  width: 200rpx;
}
page .addressList .addressItem .top .tag {
  padding-left: 30rpx;
}
page .addressList .addressItem .top .tag .active {
  font-size: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 70rpx;
  height: 38rpx;
  border: 1px solid #eeeeee;
  border-radius: 30rpx;
  color: white;
  background-color: #67a8ec;
}
page .addressList .addressItem .top .default {
  width: 80rpx;
  padding-left: 30rpx;
}
page .addressList .addressItem .top .default .active {
  font-size: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 70rpx;
  height: 38rpx;
  border: 1px solid #eeeeee;
  border-radius: 30rpx;
  color: white;
  background-color: red;
}
page .addressList .addressItem .bottom {
  padding-bottom: 15rpx;
  flex: 1;
  display: flex;
  font-size: 27rpx;
}
page .addressList .addressItem .bottom .address {
  width: 680rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
page .addressList .addressItem .bottom .edit {
  flex: 1;
  align-items: center;
  justify-content: right;
}
page .addressList .addressItem .bottom .edit i {
  font-size: 35rpx;
}
page .addressList .addressItem .functionButton {
  z-index: 5;
  background-color: rgba(0, 0, 0, 0.3);
  width: 100%;
  height: 115rpx;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  font-size: 24rpx;
  color: white;
}
page .addressList .addressItem .functionButton .other {
  flex: 1;
  color: white;
}
page .addressList .addressItem .functionButton .default {
  margin-top: 4rpx;
  height: 105rpx;
  width: 105rpx;
  background-color: #fcca00;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
page .addressList .addressItem .functionButton .remove {
  margin-top: 4rpx;
  text-align: center;
  height: 105rpx;
  width: 105rpx;
  background-color: red;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
page .submit {
  margin-top: 50rpx;
  width: 100%;
  font-size: 35rpx;
}
page .submit .btn {
  background-color: red;
  width: 36%;
  margin-left: 32%;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50rpx;
  height: 70rpx;
}
