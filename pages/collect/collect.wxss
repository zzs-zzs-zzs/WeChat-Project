page {
  margin: 0;
  padding: 0;
  width: 100%;
}
page .tabs .goods .classify {
  display: flex;
  padding-top: 15rpx  ;
}
page .tabs .goods .classify view {
  flex: 2;
  padding: 10rpx;
  border: 1px solid black;
  text-align: center;
  margin-right: 20rpx;
  margin-left: 10rpx;
}
page .tabs .goods .classify .all {
  flex: 1;
}
page .tabs .goods .classify .other {
  border: 0;
}
page .tabs .goods .classify .active {
  border-color: red;
  color: red;
}
page .tabs .goods .content view .list .list-item {
  display: flex;
  padding: 10px;
  height: 185rpx;
  border-bottom: 1px solid #eeeeee;
  padding-bottom: 50rpx;
}
page .tabs .goods .content view .list .list-item .img {
  box-sizing: border-box;
  margin-right: 30rpx;
  flex: 2;
}
page .tabs .goods .content view .list .list-item .img image {
  width: 100%;
}
page .tabs .goods .content view .list .list-item .msg {
  flex: 5;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  font-size: 35rpx;
  height: 100%;
}
page .tabs .goods .content view .list .list-item .title {
  height: 90rpx;
  overflow: hidden;
}
page .tabs .goods .content view .list .list-item .price {
  color: red;
  margin-top: 20rpx;
}
