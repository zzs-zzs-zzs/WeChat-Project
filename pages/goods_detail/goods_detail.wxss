page {
  background-color: #eeeeee;
}
.container {
  background-color: white;
  width: 100%;
  margin: 0;
  padding: 0;
}
.container .lunbo {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  padding-bottom: 0;
  padding-left: 28rpx;
  height: 450rpx;
}
.container .lunbo swiper {
  height: 100%;
}
.container .lunbo swiper swiper-item image {
  width: 700rpx;
  height: 100%;
}

.container .pricecBox {
  display: flex;
  justify-content: space-between;
  height: 80rpx;
}
.container .pricecBox .price {
  flex: 1;
  color: red;
  font-size: 40rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}


.container .pricecBox .countBox {
  margin-top: 18rpx;
  width: 200rpx;
  height: 50rpx;
  display: flex;
}


.container .pricecBox .countBox .sub {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid rgb(238,238,238);
  border-radius: 10rpx;
}


.container .pricecBox .countBox .num {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
}


.container .pricecBox .countBox .add {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid rgb(238,238,238);
  border-radius: 10rpx;
}



.container .title {
  font-size: 35rpx;
  display: flex;
  padding-bottom: 10rpx;
}
.container .title .name {
  min-width: 500rpx;
  flex: 6;
  border-right: 1px solid red;
  padding-right: 15rpx;
  padding-left: 10rpx;
}
.container .title .collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-left: 28rpx;
}
.container .title .collect image {
  height: 50rpx;
  width: 50rpx;
  margin-left: 6rpx;
}
.container .title .collect text {
  font-size: 30rpx;
}
.goods-info {
  background-color: white;
  margin-top: 20rpx;
}
.goods-info .goods-title {
  color: red;
  padding: 20rpx;
  font-weight: 600;
  font-size: 35rpx;
}

.btm_tool {
  border-top: 1rpx solid #ccc;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
}
.btm_tool .tool_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}
.btm_tool .tool_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btm_tool .tool_item .text .weui-badge {
  position: absolute;
  display: inline-block;
  padding: 2rpx 18rpx 2rpx 18rpx;
  background-color: red;
  color: white;
  top: 0;
  right: 0;
  border-radius: 40%;
}
.btm_tool .btn_cart {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #ffa500;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}
.btm_tool .btn_buy {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #eb4450;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}