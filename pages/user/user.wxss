page {
  background-color: #eeeeee;
}
page .headPortrait {
  width: 100%;
  height: 350rpx;
  background-color: #e1444e;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 35rpx;
  position: relative;
}
page .headPortrait .smallHeadPortrait {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
page .headPortrait .smallHeadPortrait .bgImg {
  position: absolute;
  width: 100%;
  height: 350rpx;
  filter: blur(3px);
}
page .headPortrait .smallHeadPortrait .smImg {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  top: 100rpx;
}
page .headPortrait .smallHeadPortrait .nickName {
  position: absolute;
  top: 250rpx;
  color: white;
}
page .menuList {
  width: 94%;
  background-color: white;
  height: 100rpx;
  display: flex;
  z-index: 100;
  margin-left: 3%;
  font-size: 30rpx;
  position: absolute;
  top: 320rpx;
  border-radius: 15rpx;
}
page .menuList view {
  flex: 1;
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
page .menuList view .number {
  color: red;
}
page .indent {
  width: 94%;
  height: 140rpx;
  flex-direction: column;
  background-color: white;
  margin-left: 3%;
  margin-top: 100rpx;
  border-radius: 15rpx;
  font-size: 30rpx;
}
page .indent .businessList {
  display: flex;
  height: 100%;
}
page .indent .businessList view {
  display: flex;
  flex: 1;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
page .indent .businessList view .icon {
  flex: 2;
  position: relative;
}
page .indent .businessList view .icon i {
  font-size: 60rpx;
}
page .indent .businessList view .icon .icon-quanbudingdan {
  color: red;
}
page .indent .businessList view .icon .weui-badge {
  position: absolute;
  display: inline-block;
  padding: 2rpx 18rpx 2rpx 18rpx;
  background-color: red;
  color: white;
  top: 0;
  right: -10rpx;
  width: 18rpx;
  height: 35rpx;
  border-radius: 50%;
}
page .indent .businessList .allIndent {
  color: red;
}
page .address {
  height: 90rpx;
  width: 94%;
  margin-left: 3%;
  background-color: white;
  display: flex;
  margin-top: 20rpx;
  justify-content: center;
  align-items: center;
  border-radius: 15rpx;
  font-size: 30rpx;
}
page .address .text {
  flex: 10;
  padding-left: 10rpx;
}
page .address .icon {
  flex: 1;
  justify-content: right;
}
page .address .icon i {
  font-size: 30rpx;
}
page .functionList {
  height: 250rpx;
  width: 94%;
  margin-left: 3%;
  background-color: white;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  border-radius: 15rpx;
  font-size: 30rpx;
}
page .functionList .borderBottom {
  border-bottom: 1rpx solid #eeeeee;
}
page .functionList view {
  display: flex;
  flex: 1;
  padding-left: 10rpx;
  align-items: center;
}
page .functionList view .text {
  flex: 10;
}
page .functionList view .icon {
  flex: 1;
  display: flex;
  justify-content: right;
}
page .functionList view .icon i {
  font-size: 30rpx;
}
page .functionList view .number {
  flex: 5.5;
  display: flex;
  justify-content: right;
}
page .pushBox {
  height: 90rpx;
  width: 94%;
  margin-left: 3%;
  background-color: white;
  display: flex;
  margin-top: 20rpx;
  border-radius: 15rpx;
  font-size: 30rpx;
  align-items: center;
  justify-content: center;
}
page .pushBox .push {
  flex: 10;
  padding-left: 15rpx;
  text-align: left;
  display: block;
  background-color: white;
  font-weight: 400;
  font-size: 30rpx;
}
page .pushBox .icon {
  flex: 1;
  display: flex;
  justify-content: right;
}
page .pushBox .icon i {
  font-size: 30rpx;
  margin-left: -8rpx;
  z-index: 3;
}
